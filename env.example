# Frtl Creative Labs - Environment Variables Example
# Copy this file to .env and fill in your actual values
# Store sensitive values in Wix Secrets Manager for production

# =============================================================================
# WIX CONFIGURATION
# =============================================================================
# Your Wix site ID (found in Wix Studio dashboard)
WIX_SITE_ID=your_site_id_here

# Wix CLI API key (for deployment)
WIX_CLI_API_KEY=your_wix_cli_api_key_here

# Wix site URL (for webhooks)
WIX_SITE_URL=https://your-site.wixsite.com

# =============================================================================
# STRIPE CONFIGURATION (Fiat Payments)
# =============================================================================
# Stripe secret key (starts with sk_test_ for test mode, sk_live_ for live)
STRIPE_SECRET_KEY=sk_test_51ABC123...

# Stripe publishable key (starts with pk_test_ for test mode, pk_live_ for live)
STRIPE_PUBLISHABLE_KEY=pk_test_51ABC123...

# Stripe webhook secret (from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef...

# Stripe webhook endpoint (configure in Stripe Dashboard)
STRIPE_WEBHOOK_URL=https://your-site.wixsite.com/_functions/verifyStripeWebhook

# =============================================================================
# CRYPTO PAYMENT CONFIGURATION
# =============================================================================
# Choose ONE of the following crypto payment providers:

# --- COINBASE COMMERCE ---
# Coinbase Commerce API key (from Coinbase Commerce dashboard)
COINBASE_API_KEY=your_coinbase_api_key_here

# Coinbase Commerce webhook secret
COINBASE_WEBHOOK_SECRET=your_coinbase_webhook_secret_here

# Coinbase Commerce webhook URL
COINBASE_WEBHOOK_URL=https://your-site.wixsite.com/_functions/coinbaseWebhook

# --- NOWPAYMENTS ---
# NOWPayments API key (from NOWPayments dashboard)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here

# NOWPayments IPN secret
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret_here

# NOWPayments IPN URL
NOWPAYMENTS_IPN_URL=https://your-site.wixsite.com/_functions/nowpaymentsWebhook

# =============================================================================
# BLOCKCHAIN INTEGRATION
# =============================================================================
# Blockchain provider API key (e.g., Alchemy, Infura, Moralis)
BLOCKCHAIN_API_KEY=your_blockchain_api_key_here

# Blockchain network (ethereum, polygon, bsc, etc.)
BLOCKCHAIN_NETWORK=ethereum

# Blockchain provider URL (if using custom provider)
BLOCKCHAIN_PROVIDER_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email service provider (sendgrid, mailgun, etc.)
EMAIL_PROVIDER=sendgrid

# Email API key
EMAIL_API_KEY=your_email_api_key_here

# From email address
FROM_EMAIL=noreply@frtlcreativelabs.com

# Admin email for notifications
ADMIN_EMAIL=admin@frtlcreativelabs.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Wix Data collections are automatically configured
# No additional database configuration needed

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for user authentication
JWT_SECRET=your_jwt_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================
# Google Analytics tracking ID
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Facebook Pixel ID
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# =============================================================================
# CDN CONFIGURATION
# =============================================================================
# CDN URL for static assets
CDN_URL=https://your-cdn.com

# S3 bucket for large files
S3_BUCKET=your-s3-bucket

# S3 access key
S3_ACCESS_KEY=your_s3_access_key

# S3 secret key
S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development mode (true for development, false for production)
DEVELOPMENT_MODE=true

# Debug logging (true to enable debug logs)
DEBUG_LOGGING=true

# Test mode for payments (true for test mode, false for live)
TEST_MODE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_BLOCKCHAIN_INTEGRATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_CDN=true

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limit (requests per minute)
RATE_LIMIT=100

# Webhook rate limit
WEBHOOK_RATE_LIMIT=50

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
# Cache TTL in seconds
CACHE_TTL=3600

# Enable caching
ENABLE_CACHING=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Error tracking service (sentry, bugsnag, etc.)
ERROR_TRACKING_SERVICE=sentry

# Error tracking API key
ERROR_TRACKING_API_KEY=your_error_tracking_api_key

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup frequency (daily, weekly, monthly)
BACKUP_FREQUENCY=daily

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
# GDPR compliance
GDPR_COMPLIANCE=true

# CCPA compliance
CCPA_COMPLIANCE=true

# Data retention days
DATA_RETENTION_DAYS=365

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Push notification service
PUSH_NOTIFICATION_SERVICE=firebase

# Push notification API key
PUSH_NOTIFICATION_API_KEY=your_push_notification_api_key

# SMS service
SMS_SERVICE=twilio

# SMS API key
SMS_API_KEY=your_sms_api_key

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Social media integration
ENABLE_SOCIAL_LOGIN=true

# Google OAuth client ID
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id

# Facebook OAuth app ID
FACEBOOK_OAUTH_APP_ID=your_facebook_oauth_app_id

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables here
# CUSTOM_VARIABLE=your_custom_value

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Store sensitive values in Wix Secrets Manager for production
# 3. Use different values for development, staging, and production
# 4. Regularly rotate API keys and secrets
# 5. Monitor API usage and costs
# 6. Test all integrations in test mode before going live
