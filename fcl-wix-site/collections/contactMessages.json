{
  "collectionName": "ContactMessages",
  "description": "Contact form submissions",
  "fields": [
    {
      "name": "name",
      "type": "text",
      "required": true,
      "description": "Sender name"
    },
    {
      "name": "email",
      "type": "email",
      "required": true,
      "description": "Sender email"
    },
    {
      "name": "subject",
      "type": "text",
      "description": "Message subject"
    },
    {
      "name": "message",
      "type": "text",
      "required": true,
      "description": "Message content"
    },
    {
      "name": "status",
      "type": "text",
      "default": "new",
      "description": "new, read, replied"
    },
    {
      "name": "priority",
      "type": "text",
      "default": "normal",
      "description": "low, normal, high, urgent"
    },
    {
      "name": "assignedTo",
      "type": "text",
      "description": "Admin assigned to handle message"
    },
    {
      "name": "response",
      "type": "text",
      "description": "Admin response to message"
    },
    {
      "name": "createdAt",
      "type": "datetime",
      "description": "Message timestamp"
    },
    {
      "name": "updatedAt",
      "type": "datetime",
      "description": "Last update timestamp"
    }
  ],
  "permissions": {
    "read": "admin",
    "write": "admin"
  },
  "indexes": [
    {
      "fields": ["status", "priority"]
    },
    {
      "fields": ["createdAt"]
    }
  ]
}

